{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "baseBranchPatterns": [
    "development"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "groupName": "Flask packages",
      "matchPackageNames": [
        "/^Flask/"
      ]
    },
    {
      "allowedVersions": "<4.0.0",
      "matchPackageNames": [
        "/^python/"
      ]
    }
  ],
  "dockerfile": {
    "managerFilePatterns": [
      "/Dockerfile/"
    ],
    "pinDigests": true
  },
  "pip_requirements": {
    "managerFilePatterns": [
      "/requirements.txt/"
    ]
  },
  "docker-compose": {
    "managerFilePatterns": [
      "/docker-compose.yml/",
      "/docker-compose.yaml/"
    ]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "timezone": "Europe/Berlin",
  "labels": [
    "dependencies"
  ]
}
